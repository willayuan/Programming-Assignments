#include <iostream>

using namespace std;

int main()
{
    int sum = 0;
    cout << "How many numbers?";
    int x;
    cin >> x;
    int a;
    for (int i = 1; i < x+1; i++)
    {
            cout << "enter#" <<  i << ": ";
            cin >> a;
            sum = sum + a;
    }

    cout << "the sum of the number:" << sum << endl;
    return 0;
}


